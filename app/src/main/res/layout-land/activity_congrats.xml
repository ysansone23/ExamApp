<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:padding="@dimen/pfi_24dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center"
        android:id="@+id/evaluated_congrats_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        tools:src="@drawable/ilus_congrats"
        tools:ignore="RtlHardcoded"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:padding="@dimen/pfi_20dp">

        <TextView
            android:id="@+id/evaluated_congrats_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/text.title"
            android:layout_marginTop="@dimen/pfi_32dp"
            tools:text="@string/congrats_title"/>

        <TextView
            android:id="@+id/evaluated_congrats_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/text.subtitle"
            android:layout_marginTop="@dimen/pfi_32dp"
            tools:text="Subtitulo"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/pfi_10dp"
            android:layout_marginRight="@dimen/pfi_10dp"
            android:layout_gravity="center">
            <Button
                android:layout_gravity="center"
                android:id="@+id/evaluated_congrats_action"
                style="@style/button.stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pfi_28dp"
                tools:text="Boton"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
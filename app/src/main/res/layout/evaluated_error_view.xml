<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/evaluated_error_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/error_view_title"
        style="@style/error_view_title"
        android:gravity="center"/>

    <Button
        android:id="@+id/evaluated_error_view_retry"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/error_view_button"
        android:layout_marginBottom="20dp"
        android:text="@string/error_view_retry"/>

    <Button
        android:id="@+id/evaluated_error_view_scan_another"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/error_view_button"
        android:text="@string/error_view_scan_another"/>

</merge>
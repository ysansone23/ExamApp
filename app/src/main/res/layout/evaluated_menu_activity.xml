<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/pfi_24dp"
    android:orientation="vertical">

    <Button
        style="@style/button"
        android:onClick="scan"
        android:gravity="center|left"
        android:text="Escanear"
        tools:ignore="RtlHardcoded"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pfi_1dp"
        android:background="@color/color_primary_dark"/>

    <Button
        android:layout_marginTop="@dimen/pfi_20dp"
        style="@style/button"
        android:onClick="startModal"
        android:gravity="center|left"
        android:text="Modal"
        tools:ignore="RtlHardcoded"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pfi_1dp"
        android:background="@color/color_primary_dark"/>

    <Button
        android:layout_marginTop="@dimen/pfi_20dp"
        style="@style/button"
        android:onClick="showCongrats"
        android:gravity="center|left"
        android:text="Congrats"
        tools:ignore="RtlHardcoded"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pfi_1dp"
        android:background="@color/color_primary_dark"/>

    <Button
        style="@style/button"
        android:layout_marginTop="@dimen/pfi_20dp"
        android:onClick="startWebView"
        android:gravity="center|left"
        android:text="Web View"
        tools:ignore="RtlHardcoded"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pfi_1dp"
        android:background="@color/color_primary_dark"/>
</LinearLayout>

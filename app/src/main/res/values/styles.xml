<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <!--Thesis-->
    <!--App-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActivityEvaluatedTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--General-->
    <style name="button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/pfi_text_16sp</item>
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:layout_marginTop">@dimen/pfi_16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Evaluated-->
    <style name="evaluated_loading_text">
        <item name="android:textSize">@dimen/pfi_text_18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/pfi_32dp</item>
    </style>

    <!--ErrorView-->
    <style name="error_view_title" parent="evaluated_loading_text"/>

    <!--Dialog-->
    <style name="dialog_title">
        <item name="android:textSize">@dimen/pfi_text_16sp</item>
    </style>

    <style name="dialog_subtitle">
        <item name="android:textSize">@dimen/pfi_text_14sp</item>
        <item name="android:layout_marginTop">@dimen/pfi_10dp</item>
    </style>

</resources>

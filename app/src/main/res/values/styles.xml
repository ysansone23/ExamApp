<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_secondary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Thesis-->
    <!--App-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActivityEvaluatedTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--General-->
    <style name="text">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text.title">
        <item name="android:textSize">@dimen/pfi_title_text</item>
    </style>

    <style name="text.subtitle">
        <item name="android:textSize">@dimen/pfi_subtitle_text</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/base_button_ripple</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/pfi_text_18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="button.stroke">
        <item name="android:background">@drawable/stroke_button_shape</item>
    </style>

    <!--Dialog-->
    <style name="text.subtitle.dialog">
        <item name="android:textSize">@dimen/pfi_subtitle_text</item>
        <item name="android:layout_marginTop">@dimen/pfi_10dp</item>
    </style>

</resources>
